theorem h₆ (P : Polynomial ℤ) (h_coeff : ∀ (n : ℕ), P.coeff n = 0 ∨ P.coeff n = 1) (h_factor : ∃ Q R, Q.degree > 0 ∧ R.degree > 0 ∧ P = Q * R) (h₁ : Polynomial.eval 2 P ≠ 0) (h₂ : Polynomial.eval 2 P ≠ 1) (h₃ h₄ : _root_.Prime (Polynomial.eval 2 P)) (Q R : Polynomial ℤ) (hQ : Q.degree > 0) (hR : R.degree > 0) (hP : P = Q * R) : Polynomial.eval 2 P = Polynomial.eval 2 Q * Polynomial.eval 2 R := by
  rw [hP]
  simp [Polynomial.eval_mul]